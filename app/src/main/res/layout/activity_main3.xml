<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Number">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <EditText
            android:id="@+id/number1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="6"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="7"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="9"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Clear All"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="2"
            android:layout_margin="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/substract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="="
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="*"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="/"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/modulus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="%"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <Button
        android:id="@+id/goBack"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Go Back"
        android:textSize="20sp"
        android:textStyle="bold"
        />
</LinearLayout>
</LinearLayout>